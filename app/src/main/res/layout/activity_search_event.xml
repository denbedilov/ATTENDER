<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rita.attender.searchEventActivity"
    android:background="#ffb0b0b0">
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="       Chat      "
        android:id="@+id/chat_cmd"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:onClick="chatPressed"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="      Events   "
        android:id="@+id/events_cmd"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/chat_cmd"
        android:textStyle="bold" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="    Explore       "
        android:id="@+id/explore_cmd"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:onClick="explorePressed"/>

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_spinner"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/chat_cmd"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/events_cmd" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/date_spinner"
        android:layout_alignBottom="@+id/type_spinner"
        android:layout_alignEnd="@+id/explore_cmd"
        android:layout_alignTop="@+id/type_spinner"
        android:layout_toEndOf="@+id/events_cmd"
        android:spinnerMode="dropdown" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city_spinner"
        android:layout_alignTop="@+id/type_spinner"
        android:layout_alignBottom="@+id/type_spinner"
        android:spinnerMode="dropdown"
        android:layout_alignEnd="@+id/events_cmd"
        android:layout_toEndOf="@+id/type_spinner" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Results"
        android:id="@+id/result_lbl"
        android:textColor="#ffffffff"
        android:textStyle="bold|italic"
        android:layout_below="@+id/type_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:onClick="itemPressed"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="__________________________________________________"
        android:id="@+id/line_lbl"
        android:layout_below="@+id/result_lbl"
        android:layout_alignParentStart="true"
        android:textColor="#ffffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/events_listView"
        android:layout_below="@+id/line_lbl"
        android:layout_toStartOf="@+id/city_spinner"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:choiceMode="singleChoice" />


</RelativeLayout>
